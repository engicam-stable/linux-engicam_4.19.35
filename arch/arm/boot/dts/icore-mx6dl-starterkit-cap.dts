/dts-v1/;

#include "imx6dl.dtsi"
#include "imx6qdl-icore.dtsi"
 
/ {
	model = "Engicam i.CoreM6 DualLite/Solo Starterkit Capacitive";
	compatible = "fsl,imx6-icore", "fsl,imx6dl";
};

&mxcfb1 {
	compatible = "fsl,mxc_sdc_fb";
	disp_dev = "lcd";
	interface_pix_fmt = "RGB666";
	mode_str ="Amp-WD";
	default_bpp = <16>;
	int_clk = <0>;
	late_init = <0>;
	status = "okay";
};

&mxcfb2 {
	status = "disabled";
};

&usdhc3
{
  status = "ok";
};

&i2c2 {

	hdmi_edid: edid@50 {
		compatible = "fsl,imx6-hdmi-i2c";
		reg = <0x50>;
	};
};

&i2c3 {

    
  codec: sgtl5000@0a {
    compatible = "fsl,sgtl5000";
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_sgtl5000>;
    reg = <0x0a>;
    clocks = <&clks IMX6QDL_CLK_CKO>;
    VDDA-supply = <&reg_2p5v>;
    VDDIO-supply = <&reg_3p3v>;
    VDDD-supply = <&reg_1p8v>;
  };
  
#ifdef TBT
	adv7180: adv7180@21 {
		compatible = "adv,adv7180";
		reg = <0x21>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_ipu1_2>;
		clocks = <&clks 201>;
		clock-names = "csi_mclk";
		DOVDD-supply = <&reg_3p3v>; /* 3.3v, enabled via 2.8 VGEN6 */
		AVDD-supply = <&reg_3p3v>;  /* 1.8v */
		DVDD-supply = <&reg_3p3v>;  /* 1.8v */
		PVDD-supply = <&reg_3p3v>;  /* 1.8v */
		csi_id = <0>;
		mclk = <24000000>;
		mclk_source = <0>;
		cvbs = <1>;
	};
#endif
	polytouch: st1232_ts@55 {
		compatible = "sitronix,st1232-ts";
		reg = <0x55>;
		pinctrl-names = "default";		
		pinctrl-0 = <&pinctrl_st1232_ts>;
		interrupt-parent = <&gpio1>;
		interrupts = <7 0>;
	};
};


&iomuxc {
    /*pinctrl_hog: hoggrp {
    fsl,pins = <
      MX6QDL_PAD_SD3_CMD__GPIO7_IO02 0x1f059
    >;
  };*/
  
  pinctrl_hog: hoggrp {
    fsl,pins = <
      MX6QDL_PAD_GPIO_2__GPIO1_IO02 0x1f059
      MX6QDL_PAD_EIM_D19__GPIO3_IO19 0x1f059 /* not used pin for ADV7180 driver compatibility */
      >;
  };
  
  pinctrl_st1232_ts:  st1232-tsgrp  {
    fsl,pins = <
      MX6QDL_PAD_GPIO_7__GPIO1_IO07  0x1b0b0 /*interrupt*/
    >;
  };
};
